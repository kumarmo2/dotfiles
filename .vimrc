" set options starts.
set nu
set rnu
set nocompatible
set tabstop=4
set shiftwidth=4
set expandtab
set smartindent
set nowrap
set smartcase
set noswapfile
set nobackup
set undodir=~/.vim/undodir
" set undofile
set incsearch
set hlsearch

" set options ends.

let mapleader = " "
nnoremap <leader><CR> :qa<CR>

